{% extends 'base-backend.html.twig' %}

{% block title %}Details{% endblock %}

{% block body %}

    <div class="container">
        <div class="  col-sm-10 offset-sm-1 col-md-10 offset-md-1 col-lg-8 offset-lg-2">
            <div class="card mb-4 border-0 my-5  " >
                <div class="card-body shadow bg-light rounded-3 bg-light">
                    
                   
                        <img class=" card-img-top mb-4" src="{{ product.image }}" class="style2" alt="event image">
                    

                    <h5 class="card-title text-center ">{{ product.name }}</h5>
                    <div class="card-text ms-4 ">
                        <p class="text-center fw-light">{{ product.description }}</p>
                        <p class="m-0 "><span class="fw-bold">Description:</span> {{ product.description }}</p>
                        <p class="m-0 "><span class="fw-bold">Size:</span> {{ product.size }}</p>
                        <p class="m-0 "><span class="fw-bold">Material:</span> {{ product.material }}</p>
                        <p class="m-0 "><span class="fw-bold">Type:</span> {{ product.type }}</p>
                        <p class="m-0 "><span class="fw-bold">Price:</span> {{ product.price}}</p>
                    </div>
                    <div class="d-flex justify-content-center my-3">
                        <a href="/update/{{ product.id }}"><button class="btn btn-outline-success btn-sm fw-light rounded-circle mx-2" title="edit"><i class='far fa-edit'></i></button></a>
                        <a href="/delete/{{ product.id }}" onclick="return confirm('Are you sure you want to delete this?')"  class="btn btn-outline-danger btn-sm fw-light rounded-circle mx-2"><i class='far fa-trash-alt'></i></a>  
                    </div>
                </div>
            </div>
        </div>  
    </div>

{% endblock %}